{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "ES5",
      "ES6",
      "DOM"
    ],
    "types": [
      "cypress"
    ],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["cypress/*"],
      "@fixtures/*": ["cypress/fixtures/*"]
    }
  },
  "exclude": [
    "cypress/**/[WIP]*.ts"
  ],
}
